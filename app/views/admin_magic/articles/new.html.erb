        <div class="am-u-sm-12">
          <div class="card-box">

            <h4 class="header-title m-t-0 m-b-30">写文章</h4>

            <div class="am-g">
              <div class="am-u-md-12">
                <form class="am-form am-text-sm" >
                  <div class="am-form-group">
                    <div class="am-g">
                      <label class="am-u-md-1 am-md-text-right am-padding-left-0" for="doc-ipt-text-1">标题</label>
                      <input class="am-u-md-11 form-control"  id="doc-ipt-text-1" placeholder="输入标题信息" required>
                    </div>
                  </div>

                  <div class="am-form-group">
                    <div class="am-g">
                      <label class="am-u-md-1 am-md-text-right" for="doc-select-2">类型</label>
                      <div class="am-u-md-11 am-padding-0">
                        <select multiple class="" id="doc-select-2" required>
                          <option>1</option>

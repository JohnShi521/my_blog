<div class="container">

  <div class="row row-offcanvas row-offcanvas-right">

    <div class="col-xs-12 col-sm-8">
      <div class="page-header">
        <h4>记录学习的点点滴滴 <small>不积跬步无以至千里</small></h4>
      </div>
      <div class="content">
        <div class="title">
          <h3>最新发布</h3>
          <div class="more">
            <a href="#">全部</a>
            <a href="#">技术分享</a>
            <a href="#">生活杂谈</a>
          </div>
        </div>
        <% if @articles.blank?  %>
          <div class="excerpt">
            <%= image_tag("no_article.png",class: "img-responsive") %>
          </div>
        <% else %>
          <% @articles.each do |art| %>
          <div class="excerpt">
            <header>
              <a class="cat" href="#"><%=art.category.present? ? art.category.try(:name) : "暂无" %> <i></i></a>
              <h2>
                <%= link_to detail_home_path(id:art.id) do %>
                  <%= art.try(:title) %>
                <% end %>
              </h2>
            </header>
            <p><%= art.try(:short_content) %></p>
            <p class="meta">
              <a class="time" href="#"><i class="glyphicon glyphicon-time"></i> <%= art.create_time.strftime("%Y-%m-%d") %></a>
              <a class="views" href="#"><i class="glyphicon glyphicon-eye-open"></i> 0</a>
              <a class="comment" href="#"><i class="glyphicon glyphicon-comment"></i> 0</a>
            </p>
          </div>
          <% end %>
        <% end %>



